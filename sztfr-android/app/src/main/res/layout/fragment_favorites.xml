<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="hr.sztfr.sztfr_android.ui.favorites.FavoritesViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/screensBackgroundColor"
        tools:context=".ui.favorites.FavoritesFragment"
        android:orientation="vertical">

        <hr.sztfr.sztfr_android.ui.search_filter.SearchFilter
            android:id="@+id/search_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favorites_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/spacing_small"
            app:layoutManager="LinearLayoutManager"
            app:listData="@{viewModel.displayItems}"
            tools:listitem="@layout/layout_card_event"/>

    </LinearLayout>
</layout>